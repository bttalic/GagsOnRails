<li id="<%= feed_item.id %>">
	<% if(feed_item.user.avatar?) %>
	<%= link_to image_tag(feed_item.user.avatar.url, class:"thumb_user"), feed_item.user %>
	<% else %>
	<%= link_to image_tag("user_default.png", class:"thumb_user"), feed_item.user %>
	<% end %>
	<span class="user">
		<%= link_to feed_item.user.name, feed_item.user %>
	</span>
	<span class="content"  id="micropostcontent"><%= feed_item.content %></span>
	<span class="timestamp">
		Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
		
		<% if current_user?(feed_item.user) %>
		<%= link_to "delete", feed_item, method: :delete,
		confirm: "You sure?",
		title: feed_item.content %>
		<% end %>

		
	</span>
</li>